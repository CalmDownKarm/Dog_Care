<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.upstairs.dogcare">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.upstairs.dogcare.MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.upstairs.dogcare.Home_Activity"
            android:screenOrientation="portrait"
            android:finishOnTaskLaunch="true"
            />
        <activity
            android:name="com.upstairs.dogcare.Breeds_list"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.upstairs.dogcare.CardsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.upstairs.dogcare.search"
            android:screenOrientation="portrait" />

        <receiver android:name="com.upstairs.dogcare.NotificationPublisher" />

        <activity android:name="com.upstairs.dogcare.settings"
            android:screenOrientation="portrait"
            android:noHistory="true"></activity>
    </application>


</manifest>